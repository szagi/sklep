<% provide(:title, "Zaloguj się") %>
<h1>Zaloguj się</h1>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :login, "Login" %>
      <%= f.text_field :login %>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password %>

      <%= f.submit "Zaloguj", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Jesteś tu nowy? <%= link_to "Zarejestruj się!", new_path %></p>
  </div>
</div>
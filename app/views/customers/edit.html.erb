<% provide(:title, "Edytuj") %>
<h1>Edytuj profil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
      <%= render 'shared/error_messages' %>

	<%= f.label :login, "Login" %>
	<%= f.text_field :login %>
	<%= f.label :name, "Imie" %>
	<%= f.text_field :name %>
	<%= f.label :surname, "Nazwisko" %>
	<%= f.text_field :surname %>
	<%= f.label :birh_date, "Data urodzenia" %>
	<%= f.date_field :birth_date %>
	<%= f.label :email, "Email" %>
	<%= f.email_field :email %>
	<%= f.label :email_confirmation , "Potwierdz email" %> 
	<%= f.email_field :email_confirmation %>
	<%= f.label :password, "Hasło" %>
	<%= f.password_field :password %>
    <%= f.label :password_confirmation, "Potwierdź hasło" %>
    <%= f.password_field :password_confirmation %>
    <%= f.label :country, "Kraj" %>
    <%= f.text_field :country %> 
    <%= f.label :city, "Misto" %> 
    <%= f.text_field :city %> 
    <%= f.label :street, "Ulica" %> 
    <%= f.text_field :street %>	
	<%= f.label :zip_code, "Kod pocztowy" %>
	<%= f.text_field :zip_code %>

      <%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @customer %>
    <a href="http://gravatar.com/emails">zmień</a>
  </div>
</div>